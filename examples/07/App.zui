<!--https://learn.svelte.dev/tutorial/reactive-assignments-->
<script>
    let count = 0;

    function increment() {
        count += 1;
    }
</script>

<button
    on:click={increment}
    title="Geklickt {count}-{count === 1 ? 'mal' : 'mals'}"
>
    Clicked {count}
    {count === 1 ? "time" : "times"}
</button>
